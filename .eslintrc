{
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb"
  ],
  "plugins": [
    "react"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false,
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "semi" : [2, "always"],
    "new-cap": [0],
    "indent" : [2, "tab"],
    "react/jsx-indent-props": [2, "tab"],
    "react-in-jsx-scope": 0
  }
}
